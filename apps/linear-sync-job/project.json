{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/linear-sync-job/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/linear-sync-job",
        "main": "apps/linear-sync-job/src/main.ts",
        "tsConfig": "apps/linear-sync-job/tsconfig.app.json",
        "generatePackageJson": true,
        "target": "node",
        "compiler": "tsc"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/linear-sync-job/src/environments/environment.ts",
              "with": "apps/linear-sync-job/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "linear-sync-job:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/linear-sync-job/**/*.ts"],
        "maxWarnings": 3
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/linear-sync-job"],
      "options": {
        "jestConfig": "apps/linear-sync-job/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "generate-gql": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "yarn graphql-codegen --config apps/linear-sync-job/codegen.yaml",
        "outputPath": "apps/linear-sync-job/src"
      }
    },
    "docker-build": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "metadata": {
          "images": [
            "registry.digitalocean.com/govrn-protocol/linear_sync_job"
          ],
          "load": true,
          "tags": ["type=sha"]
        }
      }
    },
    "docker-push": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "metadata": {
          "images": [
            "registry.digitalocean.com/govrn-protocol/linear_sync_job"
          ],
          "tags": ["type=sha"]
        }
      }
    },
    "docker-login": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["doctl registry login --expiry-seconds 1200"],
        "parallel": false
      }
    },
    "deployStaging": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "TAG=$(echo $GITHUB_SHA | head -c7) && sed -i 's|<IMAGE>|registry.digitalocean.com/govrn-protocol/linear_sync_job:sha-'${TAG}'|' $GITHUB_WORKSPACE/kubernetes/staging/linear_sync_job.yaml",
          "doctl kubernetes cluster kubeconfig save --expiry-seconds 600 staging-do-1-nyc3-1656080503829",
          "kubectl apply -f $GITHUB_WORKSPACE/kubernetes/staging/linear_sync_job.yaml"
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
