{
  "root": "apps/protocol-api",
  "sourceRoot": "apps/protocol-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [
        {
          "target": "generate",
          "projects": "self"
        }
      ],
      "options": {
        "outputPath": "dist/apps/protocol-api",
        "main": "apps/protocol-api/src/main.ts",
        "tsConfig": "apps/protocol-api/tsconfig.app.json",
        "assets": ["apps/protocol-api/src/assets"],
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/protocol-api/src/environments/environment.ts",
              "with": "apps/protocol-api/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "protocol-api:build"
      }
    },
    "node-seed": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "protocol-api:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/protocol-api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/protocol-api"],
      "options": {
        "jestConfig": "apps/protocol-api/jest.config.js",
        "passWithNoTests": true
      }
    },
    "generate": {
      "executor": "@nx-tools/nx-prisma:generate",
      "options": {
        "schema": "apps/protocol-api/src/prisma/schema.prisma"
      }
    },
    "reset": {
      "executor": "@nx-tools/nx-prisma:reset",
      "options": {
        "schema": "apps/protocol-api/src/prisma/schema.prisma"
      }
    },
    "migrate": {
      "executor": "@nx-tools/nx-prisma:migrate",
      "options": {
        "schema": "apps/protocol-api/src/prisma/schema.prisma"
      }
    },
    "seed": {
      "executor": "@nx-tools/nx-prisma:seed",
      "options": {
        "script": "apps/protocol-api/src/prisma/data/seed.ts",
        "tsConfig": "apps/protocol-api/tsconfig.app.json"
      }
    },
    "truncate": {
      "executor": "@nx-tools/nx-prisma:seed",
      "options": {
        "script": "apps/protocol-api/src/prisma/data/truncate-db.ts",
        "tsConfig": "apps/protocol-api/tsconfig.app.json"
      }
    },
    "prismaDeploy": {
      "executor": "@nx-tools/nx-prisma:deploy",
      "options": {
        "schema": "apps/protocol-api/src/prisma/schema.prisma"
      }
    },
    "snapshot": {
      "executor": "@nx-tools/nx-prisma:seed",
      "options": {
        "script": "apps/protocol-api/src/prisma/data/snapshot.ts",
        "tsConfig": "apps/protocol-api/tsconfig.app.json"
      }
    },
    "docker-build": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "metadata": {
          "images": ["registry.digitalocean.com/govrn-protocol/protocol_api"],
          "load": true,
          "tags": ["type=sha"]
        }
      }
    },
    "docker-push": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "metadata": {
          "images": ["registry.digitalocean.com/govrn-protocol/protocol_api"],
          "tags": ["type=sha"]
        }
      }
    },
    "docker-login": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["doctl registry login --expiry-seconds 1200"],
        "parallel": false
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "TAG=$(echo $GITHUB_SHA | head -c7) && sed -i 's|<IMAGE>|registry.digitalocean.com/govrn-protocol/protocol_api:sha-'${TAG}'|' $GITHUB_WORKSPACE/kubernetes/prod/protocol_api.yaml",
          "doctl kubernetes cluster kubeconfig save --expiry-seconds 600 protocol-production-nyc3-1650036584083",
          "kubectl apply -f $GITHUB_WORKSPACE/kubernetes/prod/protocol_api.yaml"
        ],
        "parallel": false
      }
    },
    "deployStaging": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "TAG=$(echo $GITHUB_SHA | head -c7) && sed -i 's|<IMAGE>|registry.digitalocean.com/govrn-protocol/protocol_api:sha-'${TAG}'|' $GITHUB_WORKSPACE/kubernetes/staging/protocol_api.yaml",
          "doctl kubernetes cluster kubeconfig save --expiry-seconds 600 k8s-1-22-8-do-1-nyc3-1656045352751",
          "kubectl apply -f $GITHUB_WORKSPACE/kubernetes/staging/protocol_api.yaml"
        ],
        "parallel": false
      }
    },
    "verify": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["kubectl rollout status deployment/protocol-api"],
        "parallel": false
      }
    },
    "seed-fresh": {
      "executor": "@nrwl/workspace:run-commands",
      "outputs": [],
      "options": {
        "commands": [
          "yarn nx run protocol-api:truncate",
          "yarn nx run protocol-api:seed"
        ]
      },
      "parallel": false
    }
  },
  "tags": []
}
